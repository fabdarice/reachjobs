<%= render "shared/head_description" %>
<br/>
<div id="rec_join_reachjobs">
    Register below and create your free online resume and portfolio
</div>    
<br/>
<div id="register_form">
  <div id="register_form_notsigned">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <div id="form_group">
        <div id="form_label"><%= f.label :lastname %>:</div>
        <div id="form_field"><%= f.text_field :lastname %><br/><span class="field_error_msg"><%= display_error(resource, 'lastname') %></span></div>
       
        
      </div>  

      <div id="form_group">
        <div id="form_label"><%= f.label :firstname %>:</div>
        <div id="form_field"><%= f.text_field :firstname %><br/><span class="field_error_msg"><%= display_error(resource, 'firstname') %></span></div>
      </div>
      
      <div id="form_group">
        <div id="form_label"><%= f.label :email %>:</div>
        <div id="form_field"><%= f.email_field :email %><br/><span class="field_error_msg"><%= display_error(resource, 'email') %></span></div>
      </div>

      <div id="form_group">
        <div id="form_label"><%= f.label :password %>:</div>
        <div id="form_field"><%= f.password_field :password %><br/><span class="field_error_msg"><%= display_error(resource, 'password') %></span></div>
      </div>

      <div id="form_group">
        <div id="form_label"><%= f.label :password_confirmation %>:</div>
        <div id="form_field"><%= f.password_field :password_confirmation %><br/><span class="field_error_msg"><%= display_error(resource, 'password_confirmation') %></span></div>
      </div>

      <div id="register_button">
          
          <%= image_submit_tag "/images/button_register.png",
            :onmouseover => "this.src='/images/button_register_hover.png'",
            :onmouseout => "this.src='/images/button_register.png'" %>     
      </div>
    <% end %>
  </div>

  <div id="register_form_signed">
      <%= link_to image_tag("/images/sign_in_panel.png"), new_user_session_path %>
  </div>
</div>