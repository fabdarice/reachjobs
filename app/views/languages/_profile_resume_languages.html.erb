<span class="profile_title">Languages 
  <% if edit_profile %>
    <%= link_to "+ Add New Language", new_user_profile_language_path(current_user), :class => "add_edit_link" %>
  <% end %>  
</span>
<hr class="section_seperator" align="right" width="900px"><br>
<div class="list_content">
  <% @profile.languages.each do |f| %>
      <div class="fieldsremovable">
        <div class="left_side">
            <%= f.level %>
        </div>
        <div class="right_side">
          <span class="highlight title"%><%= f.name %></span>
          <% if edit_profile %>
            <%= link_to "Edit", edit_user_profile_language_path(current_user, f.id), :class => "add_edit_link_smaller" %>
            <%= link_to "Delete", user_profile_language_path(current_user, f.id), :class => "remote-delete" %>
          <% end %>  
          <br>
          <%=  simple_format(f.additional_information) %>
        </div>  
        <hr class="content_separator" align="right" width="700px">      
        
        <br><br>
      </div>
      
    <% end %>
</div>
<br/><br>
  
