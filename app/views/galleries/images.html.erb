<div class="gallery_images">
  <div class="gallery_images_left">
      <span class="highlight gallery_name"%><%= @gallery.name %></span><br>
      <span class="headline"><%= @gallery.headline %></span><br><br>
      <hr align="left"><br>
      <%= simple_format(@gallery.description) %><br>
      <% @gallery.skills.each do |s| %>
        <span class="one_skill"><%= s.skill_name %></span>
      <% end %>
      <br><br>
      <hr align="left"><br>  
        <%= link_to image_tag("/images/button_back_portfolio.png", 
        :mouseover => "/images/button_back_portfolio_hover.png"), show_edit_user_profile_path(@gallery.profile.user) %>
        <%= link_to image_tag("/images/button_edit_gallery_images.png", 
        :mouseover => "/images/button_edit_gallery_images_hover.png"), edit_images_user_profile_gallery_path(current_user, @gallery.id) %>  
       
  <br><br>
  </div>
  <div class="gallery_images_right">
    <div id="slideShowContainer">
        <div id="slideShow">
          <ul>
            <% @gallery.pictures.each do |p| %>
                <li><%= link_to image_tag(p.avatar.url(:medium)), p.avatar.url(:original, false) %></li>
            <% end %>    
          </ul>
        
        </div>   
        <a id="previousLink" href="#">&raquo;</a>
        <a id="nextLink" href="#">&laquo;</a>
        
    </div>
    <br><br>
  </div>          

</div>

