<span class="profile_title">Contact Me 
  <% if edit_profile %>
    <%= link_to "+ Edit", edit_user_profile_socialnetwork_path(current_user), :class => "add_edit_link" %>
  <% end %>  
</span>
<hr class="section_seperator" align="right" width="310px">
<br/>

<% if @profile.socialnetwork %>
  <div id="profile_aboutme_socialnetwork_photo">
    <% if @profile.socialnetwork.resume? %>
      <%= link_to image_tag(@profile.socialnetwork.resume.url(:small)), @profile.socialnetwork.resume.url(:original, false) %>
    <% else %>
      <%= image_tag "/images/ico_unknown_resume.png" %>
    <% end %>
  </div>
  <div id="profile_aboutme_socialnetwork_links">  
    <br>
    <span class="socialnetwork_title">Resume PDF Version</span><br>
    <% if @profile.socialnetwork.resume? %>
      <%= link_to "Download", @profile.socialnetwork.resume.url(:original, false) %>
    <% else %>
      <em>Not yet uploaded</em>
    <% end %>  
    <br><br><hr><br>
    <span class="socialnetwork_title">Social Networks</span><br>
    <ul>
      <% if @profile.socialnetwork.twitter_link.blank? == false %>
          <li><%= link_to image_tag("/images/ico_twitter.png"), @profile.socialnetwork.twitter_link %></li>
      <% end %>  
      <% if @profile.socialnetwork.facebook_link.blank? == false %>
          <li><%= link_to image_tag("/images/ico_facebook.png"), @profile.socialnetwork.facebook_link %></li>
      <% end %>
      <% if @profile.socialnetwork.linkedin_link.blank? == false %>
          <li><%= link_to image_tag("/images/ico_linkedin.png"), @profile.socialnetwork.linkedin_link  %></li>
      <% end %>  
      <% if @profile.socialnetwork.viadeo_link.blank? == false %>
          <li><%= link_to image_tag("/images/ico_viadeo.png"), @profile.socialnetwork.viadeo_link %></li>   
      <% end %>    
      <% if @profile.socialnetwork.reachjobs_link.blank? == false %>
          <li><%= link_to image_tag("/images/ico_reachjobs.png"), @profile.socialnetwork.reachjobs_link %></li>
      <% end %>
      <% if @profile.socialnetwork.skype_link.blank? == false %>    
          <li><%= link_to image_tag("/images/ico_skype.png"), @profile.socialnetwork.skype_link %></li>
      <% end %>    
    </ul>
    <br><hr>
  </div>  
<% end %>
