<div class="edit_form">
<span class="profile_title">Add New Hobby</span>
  <hr class="edit_section_seperator" align="left" width="840px">
  <br/>
  <% if flash[:error] %>
    <span class="profile_header_flash"><%= image_tag("/images/ico_error.png") %><%= flash[:error] %></span><br><br>
  <% end %>
  <%= form_for @hobby, :url => user_profile_hobbies_path do |f| %>
    <%= f.label :name, "Hobby" %> :<br> <%= f.text_field :name %><br>
    <span class="field_error_msg"><%= display_error(@hobby, 'name') %></span><br>

    <%= f.label :description %> :<br> <%= f.text_area :description, :rows => '10', :cols => '40' %><br>
    <span class="field_error_msg"><%= display_error(@hobby, 'description') %></span>
    <br><br>

    <div class="edit_submit_field">
          <%= link_to image_tag("/images/button_cancel.png", 
                  :mouseover => "/images/button_cancel_hover.png"), show_edit_user_profile_path(current_user) %>         
          <%= image_submit_tag "/images/button_save_changes.png", 
                  :onmouseover => "this.src='/images/button_save_changes_hover.png'", 
                  :onmouseout => "this.src='/images/button_save_changes.png'" %>         
    </div>
  <% end %>
</div>    