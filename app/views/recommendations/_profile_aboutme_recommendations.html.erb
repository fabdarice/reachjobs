<div style="clear:both"></div>
<br><br>
<span class="profile_title">
    Recommendations 
    <% if edit_profile %>
      <%= link_to "+ Add", new_user_profile_recommendation_path(current_user), :class => "add_edit_link", :id => "add_recommendation" %>
    <% end %>  
</span>
<hr class="section_seperator" align="right" width="310px">
<br/>
<div id="list_recommendations">
  <% @profile.recommendations.each do |f| %>
    <div class="recommendation_fieldsremovable">
        <span class="author highlight"><%= f.author %></span>  
          <% if edit_profile %>
            <%= link_to "Edit", edit_user_profile_recommendation_path(current_user, f.id), :class => "add_edit_link_smaller", :id => "edit_recommendation_#{f.id}" %>
            <%= link_to "Delete", user_profile_recommendation_path(current_user, f.id), :class => "remote-delete", :id => "delete_recommendation_#{f.id}" %>
          <% end %>  
          <br>
        <span class="relation"> <%= f.relation %></span><br><br>
        <span class="content"><q><%= simple_format(f.content) %></q></span>
        <br><br><hr>
    </div>
  <% end %>
</div>